    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch go linux remote",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/.",
            "args": [
                "--config=pipeline/ota-b2c/oauth2_proxy.local.cfg"
            ]
        },
        {
            "name": "Launch local",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "env": {},
            "args": [
                "--config=C:/GitRepos/ota-b2c-oauth-proxy/pipeline/ota-b2c/oauth2_proxy.local.cfg"
            ]
        },
    ]
}